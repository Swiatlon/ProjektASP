@model List<Projekt.Models.ProductModel>

<h2>Product List</h2>
<p>
    <a asp-action="Create">Add a new product</a>
</p>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Producer</th>
                <th>Production Date</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Producer</td>
                    <td>@product.ProductionDate.ToShortDateString()</td>
                    <td>@product.Description</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@product.Id">Details</a> |
                        <a asp-action="Edit" asp-route-id="@product.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products to display.</p>
}