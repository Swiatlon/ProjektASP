@model Projekt.Models.Producer.ProducerModel;

<h2 class="margin-2">Edytuj Producenta</h2>

<form asp-action="Edit" method="post" class="needs-validation" novalidate>
    <input type="hidden" asp-for="Id" />

    <div class="form-group margin-2">
        <label asp-for="Name" style="font-weight: bold;">Nazwa:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group margin-2">
        <label asp-for="Description" style="font-weight: bold;">Opis:</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary margin-2">Zapisz Zmiany</button>
</form>
